  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1",
    "drizzle-orm": "0.44.5",
    "drizzle-zod": "0.8.3",
    "elysia": "latest",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "0.31.4"
  },
  "module": "src/index.js",
  "exports": {
    ".": "./src/index.ts"
  }
}
